{
  "name": "html-md-converter-vscode",
  "displayName": "HTML-Markdown Converter",
  "description": "Bidirectional HTML to Markdown and Markdown to HTML converter",
  "version": "1.0.1",
  "publisher": "jasdeepkhalsa",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "html",
    "markdown",
    "converter",
    "format"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "html-md-converter.htmlToMarkdown",
        "title": "Convert HTML to Markdown"
      },
      {
        "command": "html-md-converter.markdownToHtml",
        "title": "Convert Markdown to HTML"
      }
    ],
    "keybindings": [
      {
        "command": "html-md-converter.htmlToMarkdown",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m"
      },
      {
        "command": "html-md-converter.markdownToHtml",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "html-md-converter.htmlToMarkdown",
          "group": "1_modification",
          "when": "editorHasSelection"
        },
        {
          "command": "html-md-converter.markdownToHtml",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "files": [
    "extension.js",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint .",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0"
  },
  "dependencies": {
    "markdown-it": "^14.0.0",
    "turndown": "^7.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jasdeepkhalsa/html-md-converter.git"
  },
  "license": "MIT"
}
