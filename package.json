{
  "name": "html-md-converter",
  "version": "1.1.1",
  "description": "A bidirectional HTML to Markdown and Markdown to HTML converter with CLI and VS Code extension support",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "html-to-md": "./bin/html-to-md.js",
    "md-to-html": "./bin/md-to-html.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js bin/**/*.js",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "prepare": "npm run format",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "html",
    "markdown",
    "converter",
    "cli",
    "vscode-extension",
    "turndown",
    "markdown-it"
  ],
  "files": [
    "src",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "markdown-it": "^14.0.0",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jasdeepkhalsa/html-md-converter.git"
  },
  "bugs": {
    "url": "https://github.com/jasdeepkhalsa/html-md-converter/issues"
  },
  "homepage": "https://github.com/jasdeepkhalsa/html-md-converter#readme"
}
